<reactiveui:ReactiveWindow x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        xmlns:reactiveui="http://reactiveui.net" 
        xmlns:vm="clr-namespace:WpfApp.ViewModels"
        x:TypeArguments="vm:AppBootstrapper"
        mc:Ignorable="d"
        Title="WPF App" Height="450" Width="800">

    <reactiveui:RoutedViewHost Name="rvh" Router="{Binding Router}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

</reactiveui:ReactiveWindow>
